<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">

        <style>
            @import url(/stylesheets/common.css);
            @import url(/stylesheets/admin.css);
        </style>

        <script type="text/javascript" src="/javascripts/jquery.js"></script> 

        <link rel="stylesheet" type="text/css" href="/javascripts/vendor/tinyeditor/style.css" />
        <script type="text/javascript" src="/javascripts/vendor/tinyeditor/tinyeditor.js"></script> 
        <script type="text/javascript" src="/javascripts/editor.js"> </script>
        <script>
            $(function(){
                var editor = init_editor('post_content');
                $('#post_form').bind('submit', function(){
                    editor.post();
                });
            });
        </script>

        <title>New - Ycms</title>
    </head>
    <body>
        <div id="head">
            <h1 id="name">(Y 'Fleurer) | <a href="">注销</a></h1>
            <ul class="nav">
                <li><a href="" class="cur">首页</a></li>
                <li><a href="">文章</a></li>
                <li><a href="">评论</a></li>
                <li><a href="">页面</a></li>
                <li><a href="">用户</a></li>
                <li><a href="">设置</a></li>
            </ul>
            <ul class="nav sub-nav">
                <li><a href="">新文章</a></li>
                <li><a href="">审核评论</a></li>
            </ul>
        </div>
        <div id="main">
            <h1>新文章</h1>
            <span class="alert">cheers~ xxx successfully! </span>
            <span class="alert error">orz~ </span>

            <% form_for :post, :action=>:add, :html=>{:id=>'post_form'} do |f| %>
            <div id="left">

                <div class="blc-raw">
                      <label>标题</label>
                      <p>
                      <%= f.text_field :title, :class => 'title' %>
                      </p>
                      <label>内容</label>
                      <p>
                          <%= f.text_area :content %>
                      </p>
                </div>
                <div class="blc">
                    <h2>文章选项</h2> 
                    <div class="content">
                        <p>it's a blc</p>
                    </div>
                </div>

            </div>
            <div id="right">

                <div class="blc">
                    <h2>发布</h2> 
                    <div class="content">
                        <p>状态：未发布</p>
                        <p>操作：<button>发布</button></p>
                    </div>
                </div>
                <div class="blc">
                    <h2>分类</h2> 
                    <div class="content">
                        <p>it's a blc</p>
                    </div>
                </div>
            <% end #form %>
            </div>
        </div>
        <div id="foot">
            (Y 'cmor) | powered by youthol.cn
        </div>
    </body>
</html>



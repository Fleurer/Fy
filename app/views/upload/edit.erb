<html>
  <head>
    <script></script>
    <style>
      @import url(/stylesheets/fy-common.css);
      @import url(/stylesheets/fy-notice.css);
      @import url(/stylesheets/fy-upload.css);
    </style>
    <title>上传</title>
  </head>

  <body>

    <div id="head">
      <a href="/upload/add">上传</a> | 
      <a href="/upload/list">媒体库</a>
    </div>

    <div id="main">
      <div class="upload">
        <img src="<%=@upload.url(:thumb)%>" />
        <div class="desc">
          <span class="title"><%=@upload.basename%></i></span> 
          <span class="size"><%=@upload.size/1000%>kb</span>
          <span class="misc"><%=@upload.created_at%> by <i><%=@upload.user.name rescue ''%></i></span>
        </div>
      </div>
    </div>

  </body>
</html>

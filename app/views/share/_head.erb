<%
  title ||= '首页'
  cur   ||= :home
  tabs = {
    :home => {
      :index    => ['首页',   url_for(:controller => :admin)],
      :sub_tabs  => []
    },
    :post => {
      :index    => ['文章',   url_for(:controller => :post)],
      :sub_tabs  => [
        ['新文章', url_for(:action => :add)],
        ['管理',   url_for(:action => :list)],
        ['回收站', '']
      ]
    }
  }
  current_tab = tabs[cur]
  current_tab[:cur]='class="cur"'
  sub_tabs = current_tab[:sub_tabs]
%>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">

        <style>
            @import url(/stylesheets/common.css);
            @import url(/stylesheets/admin.css);
        </style>
        <script type="text/javascript" src="/javascripts/jquery.js"></script>

        <title><%= title %> - Fy</title>
    </head>
    <body>
        <div id="head">
            <h1 id="name">欢迎，<%= link_to @current_user.name %> | <a href="">注销</a></h1>
            <ul class="nav">
              <% 
                tabs.each do |k, v|
                  name, url = v[:index]
                  %><li><a <%=v[:cur]%> href="<%=url%>"><%=name%></a></li><%
                end 
              %>
            </ul>
            <ul class="nav sub-nav">
              <% for name, url in sub_tabs %>
                <li><a href="<%=url%>"><%=name%></a></li>
              <% end %>
            </ul>
        </div>
